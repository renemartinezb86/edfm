    <!--
        Added the entity ChargingSystem.
    -->
    <changeSet id="20181121205449-1" author="jhipster">
        <createTable tableName="charging_system">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="service_class_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="offer_template" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="characteristic_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="service_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_charging_system_service_id" />
            </column>            <column name="free_unit_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_charging_system_free_unit_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
